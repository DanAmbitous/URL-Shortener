<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
  <title>URL Simplifer</title>
</head>
<body>
  <div class="container">
    <h1>URL Simplifer</h1>
    <form action="/shortUrls" method="POST" class="my-4-form-inline">
      <label for="full-url" class="sr-only">Full URL</label>
      <input type="url" id="full-url" name="fullURL" placeholder="URL" class="form-control col mr-2" required>
      <button type="submit" class="btn btn-primary">Simplifer</button>
    </form>

    <table class="table table-striped table-responsive">
      <thead>
        <th>Full URL</th>
        <th>Short URL</th>
        <th>Clicks</th>
      </thead>
      <tbody>
        <% shortURls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% })  %> 
      </tbody>
    </table>
  </div>
</body>
</html>